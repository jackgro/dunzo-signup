.span2
  %h6
    Categories #{link_to "+ Add", '#', class: "new-category-link pull-right"}
  .new-user-category-form.display-none
    = render 'categories/form'
  .category
    %p= link_to "All categories", "#"
    = render @categories

.span6
  %header.date
    %span.prev-day= link_to "<", date: @date.prev_day
    = date_header(@date)
    = @date.strftime("%A, %B %e, %Y")
    %span.next-day= link_to ">", date: @date.next_day

  - @categories.each do |category|
    %div{:class => "category-#{category.id}"}
      %h6= category.name
      = link_to "Add a new item...", new_category_task_path(category), |
        class: "category-#{category.id}-task-link", remote: true       |
      %div{:class => "category-#{category.id}-tasks"}
        - category.tasks.each do |task|
          = render :partial => "tasks/task", locals: {category: category, task: task}

.span3
  %header.date
    = @date.strftime("%B %Y")
    %span.month-switcher
      = link_to "<", date: @date.prev_month
      = link_to ">", date: @date.next_month
  = calendar @date do |date|
    = date.day
