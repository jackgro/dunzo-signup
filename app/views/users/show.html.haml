.span2
  %ul.nav.nav-list.well
    %header
      %h6 Categories #{link_to "+ Add", '#', class: "new-category-link pull-right"}
    .new-user-category-form.display-none
      = render 'categories/form'
    .category
      %li= link_to "All categories", "#"
      = render @categories

.span6
  %header.date
    = date_header(@date)
    = @date.strftime("%A, %B %e, %Y")
    = text_field_tag(:date, @date, class: "date-select")
    = render partial: "tasks/day_switcher"
  %hr.tasks

  - @categories.each do |category|
    %div{:class => "category-#{category.id}"}
      %header.category
        %h6= category.name
      = link_to "Add a new item...", new_category_task_path(category, date: @date), |
      class: "category-#{category.id}-task-link add-item", remote: true
      %div{:class => "category-#{category.id}-tasks"}
        = render category.tasks_by_date(@date)

.span4
  %header.date
    = @date.strftime("%B %Y")
    = render partial: "tasks/month_switcher"
  %hr.calendar
  = calendar @date do |date|
    = link_to date.day, "#{user_path(current_user, date: date)}", class: "calendar-day"
