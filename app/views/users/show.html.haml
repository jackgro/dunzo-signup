.left.sidebar-nav.well
  %ul.nav.nav-list
    %li.nav-header Categories #{link_to "+ Add", '#', class: "new-category-link pull-right"}
    .new-user-category-form.display-none
      = render 'categories/form'
    %li= link_to "All categories", "#", class: "all-categories"
    = render @categories

.right
  %header.date
    = @date.strftime("%B %Y")
    = render partial: "tasks/month_switcher"
  %hr.calendar
  = calendar @date do |date|
    = link_to date.day, "#{user_path(current_user, date: date)}", class: "calendar-day"

.content.fixed-fixed
  .row-fluid
    %header.date
      = date_header(@date)
      = @date.strftime("%A, %B %e, %Y")
      = render partial: "tasks/day_switcher"
    %hr.tasks

    - @categories.each do |category|
      %div{:class => "category-#{category.id}"}
        %header.category
          %h6= category.name
        = link_to new_category_task_path(category, date: @date), class: "category-#{category.id}-task-link add-item", remote: true  do
          + Add a new item...
        %div{:class => "category-#{category.id}-tasks"}
          = render category.tasks_by_date(@date)
