<div class="row">
	<div class="span2">
		<h6>Categories <%= link_to "+ Add", '#', class: "new-category-link pull-right" %></h6>
		<div class="new-user-category-form display-none">
			<%= form_for ([@user, @category]) do |f|%>
				<%= f.text_field :name, placeholder: "Name", class: "span2" %>
			<% end %>
		</div>

		<div class="category">
			<%= link_to "All categories", user_categories_path(@user) %>
		</div>
		<% @categories.each do |category| %>
			<div class="category">
				<%= category.name %>
				<%= link_to "x", user_category_path(@user, category), method: :delete, class: "pull-right" %>
				<%# link_to "rename" , edit_user_category_path([category]), class: "pull-right" %>

			</div>
		<% end %>

	</div>

	<div class="span4 offset1">
		<% @categories.each do |category| %>
			<div class="category-<%= category.id %>">
				<h6><%= category.name %></h6> 
				<%= link_to "Add a new item...", new_category_task_path(category), 
				class: "category-#{category.id}-task-link", remote: true %>

				<div class="category-<%= category.id %>-tasks">
					<% category.tasks.each do |task| %>
						<li class="task">
							<%= check_box("task", :complete) %>
							<%= task.name %>
							<%= link_to "x", category_task_path(category, task), class: "delete-task pull-right",
							:method => :delete %>
						</li>
					<% end %>
					<%# render 'tasks/tasks', collection: category.tasks %>
				</div>
			</div>


		<% end %>
	</div>
	<div class="span4 offset1">
		<h3>TODO: Calendar</h3>
	</div>

</div>