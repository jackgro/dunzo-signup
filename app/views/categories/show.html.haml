= render partial: "shared/sidebar", locals: { date: @date }

//========================== Content ========================//
//==========================================================//
.content
  .header
    %h1.page-title= @date.strftime("%A, %B %e, %Y")
    -#= render partial: "tasks/day_switcher", locals: { category: params[:category_id] }
    .date-switcher
      %a.btn{:href => "#{user_category_path(@user, date: @date.prev_day)}"}
        %i.icon-chevron-left
      %a.btn{:href => "#{user_category_path(@user, date: @date.next_day)}"}
        %i.icon-chevron-right
  .container-fluid
    .row-fluid
      .btn-toolbar.date-switcher
        .btn-group
      = render partial: 'layouts/messages'
      .well{class: "category-#{@category.id}-well"}
        = div_for @category do
          %h5= @category.name.titleize
          //========== Task form ============
          = render partial: "tasks/form", locals: { category: @category, date: @date }
          //========== Tasks ============
          = content_tag :div, class: "category-#{@category.id}-tasks" do
            = render @category.tasks_by_date(@date)

      = render partial: "layouts/footer"
