// Set html for a newly created task.
html =
  '<li class="task" id="task-<%= @task.id %>">' +
  '<%= check_box("task", :complete) %> ' +
  '<%= j @task.name %>' +
  '<%= link_to "x", category_task_path(@category, @task), class: "delete-task pull-right", :method => :delete, :remote => true %>' +
  '</li>'

$new_task_link = $('.category-<%= @category.id %>-task-link')
$task_list     = 'div.category-<%= @category.id %>-tasks'

$('form.new_task').remove(); // Remove task form

$new_task_link.show(); // Show link to add a new task again

 $(html).hide() // Append and fade in the new task to the list
          .appendTo($task_list)
            .fadeIn(300);
