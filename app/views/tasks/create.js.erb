// Set html for a newly created task.
$html = $('<%= j render(@task) %>');
$task_list = $('div.category-<%= @category.id %>-tasks');

// Append and fade in the new task to the list
$html.hide().appendTo($task_list).fadeIn(300);

// After creation, reset the form to add more
$('.new_task').resetForm();

// Enable new tasks to be checked as complete
$('#edit_task_<%= @task.id %>').submitOnCheck();
$('#edit_task_<%= @task.id %>').showOnHover('i.icon-remove');
