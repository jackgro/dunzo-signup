// Set html for a newly created task.
$html = $('<%= j render(@task) %>');
$new_task_link = $('.category-<%= @category.id %>-task-link')
$task_list     = $('div.category-<%= @category.id %>-tasks');

$html.hide().appendTo($task_list).fadeIn(300); // Append and fade in the new task to the list
$('form.new_task')[0].reset(); // After submit, reset the form
$('#edit_task_<%= @task.id %>').submitOnCheck();
