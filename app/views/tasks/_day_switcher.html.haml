.date-switcher
  - case params[:controller]
  - when 'categories'
    %a.btn{:href => "#{user_category_path(@user, date: @date.prev_day)}"}
      %i.icon-chevron-left
    %a.btn{:href => "#{user_category_path(@user, date: @date.next_day)}"}
      %i.icon-chevron-right
  - when 'users'
    %a.btn{:href => "#{user_path(@user, date: @date.prev_day)}"}
      %i.icon-chevron-left
    %a.btn{:href => "#{user_path(@user, date: @date.next_day)}"}
      %i.icon-chevron-right
