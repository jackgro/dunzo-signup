.month-switcher
  - if params[:category_uid]
    %a.pull-left{:href => username_category_path(@user.slug, @category.category_uid, date: @date.prev_month)}
      %i.icon-chevron-left
    = @date.strftime("%B")
    %a.pull-right{:href => username_category_path(@user.slug, @category.category_uid, date: @date.next_month)}
      %i.icon-chevron-right
  - else
    %a.pull-left{:href => username_path(@user.slug,  date: @date.prev_month)}
      %i.icon-chevron-left
    = @date.strftime("%B")
    %a.pull-right{:href => username_path(@user.slug, date: @date.next_month)}
      %i.icon-chevron-right

