!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title Dunzo | Daily to-do lists made simple
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => content_for?(:description) ? yield(:description) : "Dunzo | Daily to-do lists made simple", :name => "description"}
    %meta{:content => "", :name => "author"}/
    -#%link{:href => "../assets/ico/favicon.ico", :rel => "shortcut icon"}/
    = favicon_link_tag "/favicon.ico?1", rel: 'shortcut icon'
    %link{:href => "iphone-icon.png", :rel => "apple-touch-icon"}/

    = render 'layouts/ga-js'
    - case params[:controller]
    - when "home"
      = stylesheet_link_tag "home"
      = javascript_include_tag "home"
      = render 'homepage-js'
    - else
      = stylesheet_link_tag "application", :media => "all"
      = stylesheet_link_tag "theme"
      = stylesheet_link_tag "http://swarmapp.com/dunzo/merge.css"

    - if params[:controller] == 'users' && params[:action] == 'index'
      = stylesheet_link_tag "dataTables/jquery.dataTables.bootstrap"
      = javascript_include_tag "application"
      = javascript_include_tag "dataTables/jquery.dataTables"
      = javascript_include_tag "dataTables/jquery.dataTables.bootstrap"
      = javascript_include_tag "users"

    -#= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Open+Sans:400,700,700italic,400italic,300italic,300"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Lato:400,300,700,300italic"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Roboto:100"
    = stylesheet_link_tag "font-awesome/css/font-awesome"
    = csrf_meta_tag
    / Le HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    / Le fav and touch icons
  /[if lt IE 7 ] <body class="ie ie6">
  /[if IE 7 ] <body class="ie ie7 ">
  /[if IE 8 ] <body class="ie ie8 ">
  /[if IE 9 ] <body class="ie ie9 ">
  / [if (gt IE 9)|!(IE)]><!
  %body{class: "#{params[:controller]} #{params[:action]}"}
    / <![endif]
    = render partial: 'layouts/navigation'
    = yield

  - unless params[:controller] == "home" || (params[:controller] == 'users' && params[:action] == 'index')
    = javascript_include_tag "application"
