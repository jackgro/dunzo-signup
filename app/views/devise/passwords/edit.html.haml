.row-fluid
  .dialog.span4.offset4
    .block
      %p.block-heading Change your password
      .block-body
        = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
          = f.error_notification
          = f.hidden_field :reset_password_token
          %div
            = f.input :password, label: "New password", :autofocus => true, input_html: { class: 'span12' }
          %div
            = f.input :password_confirmation, label: "Confirm new password", input_html: { class: 'span12' }
          %div= f.submit "Change my password", class: 'btn btn-primary btn-block btn-large'
